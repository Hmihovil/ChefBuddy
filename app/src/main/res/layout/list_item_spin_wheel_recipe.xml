<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_margin="6dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/recipe_ingredient_rectangular_background"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_spin_wheel_recipe_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"        
        android:src="@drawable/pizza"
        app:layout_anchor="@id/activity_recipe_detail_header_framelayout"
        app:layout_anchorGravity="center|top"
        />


    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/list_item_spin_wheel_recipe_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        />

    <TextView
        android:id="@+id/list_item_spin_wheel_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/list_item_spin_wheel_recipe_image"
        android:layout_toEndOf="@id/list_item_spin_wheel_recipe_image"
        android:layout_toLeftOf="@id/list_item_spin_wheel_recipe_checkbox"
        android:layout_toStartOf="@id/list_item_spin_wheel_recipe_checkbox"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/primary_text"
        android:ellipsize="end"
        android:textSize="16sp"
        android:lines="1"
        android:text="Recipe name placeholder"/>




</RelativeLayout>