<?xml version="1.0" encoding="utf-8"?>
<ve.com.abicelis.chefbuddy.views.FancyCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_alignParentBottom="true"
    android:layout_margin="8dp"
    app:contentPadding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/card_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="center"
            android:text="@string/fragment_spinwheel_notice_card_title"/>

        <TextView
            android:id="@+id/card_notice_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="center"
            android:text="@string/fragment_spinwheel_notice_card_subtitle"/>
    </LinearLayout>

</ve.com.abicelis.chefbuddy.views.FancyCardView>
