<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_backup_container"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:padding="6dp"
    >

    <ImageView
        android:id="@+id/list_item_backup_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_cloud_download"
        android:tint="@color/primary"
        />

    <RadioButton
        android:id="@+id/list_item_backup_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_backup_image"
        android:layout_toEndOf="@id/list_item_backup_image"
        android:layout_toLeftOf="@id/list_item_backup_radio"
        android:layout_toStartOf="@id/list_item_backup_radio"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_backup_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:lines="1"
            android:text="Google Drive backup"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/list_item_backup_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:lines="1"
            android:text="Done 30 minutes ag"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/list_item_backup_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:lines="1"
            android:text="30 recipes, 45 images"
            android:ellipsize="end"
            />
    </LinearLayout>


</RelativeLayout>