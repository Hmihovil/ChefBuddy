<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="fancy_common">
        <attr name="icon" format="reference" />
        <attr name="text" format="reference" />
        <attr name="hint" format="reference" />
        <attr name="maxLines" format="integer" />
    </declare-styleable>

    <declare-styleable name="fancy_edit_text" parent="fancy_common">
        <attr name="text"/>
        <attr name="hint"/>
        <attr name="icon"/>
        <attr name="maxLines"/>
    </declare-styleable>

    <declare-styleable name="fancy_spinner" parent="fancy_common">
        <attr name="icon"/>
    </declare-styleable>

    <declare-styleable name="fancy_title_text_view">
        <attr name="default_padding" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="fancy_auto_complete_text_view" parent="fancy_common">
        <attr name="text"/>
        <attr name="hint"/>
        <attr name="icon"/>
        <attr name="maxLines"/>
    </declare-styleable>
</resources>