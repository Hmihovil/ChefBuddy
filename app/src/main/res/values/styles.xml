<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionModeOverlay">true</item>                    <!--Put contextual action bar over toolbar, not above it-->
        <item name="android:actionModeBackground">@color/primary</item>     <!--Contextual action bar background color-->
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>                   <!-- Text color of toolbar title text -->
        <item name="android:textColorSecondary">@android:color/white</item>                 <!-- Text color of navigation drawer icon-->
        <item name="color">@android:color/white</item>                                      <!-- Text color of navigation drawer icon-->
        <item name="actionMenuTextColor">@android:color/white</item>                        <!-- Menu item color-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.TextViewTitle"  >
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="AppTheme.CardViewContent" parent="CardView" >
        <item name="android:layout_margin">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <!-- Style for Buttons on IntroActivity -->
    <style name="IntroButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/intro_blue</item>
    </style>

    <!-- Style for searchView on HomeActivity -->
    <style name="MaterialSearchViewStyle">
        <!-- Hint for edit text -->
        <item name="android:hint">@string/activity_home_searchable_hint</item>
    </style>


    <!--Preference Fragment Styles -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

</resources>
